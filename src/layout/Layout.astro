---
import "@fontsource-variable/jost"

interface Props {
  title: string
}

const { title } = Astro.props
const descriptionPage = ""
---

<!doctype html>
<html lang="es">
  <head>
    <title>{title}</title>
  
    <meta charset="UTF-8" />
    <meta name="description" content={descriptionPage} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />    

    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
  </head>
  <body>
    <div class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
    <div class="max-w-6xl px-2 lg:px-10 pt-16 md:pt-20 mx-auto">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root{
    --background: hsl(198, 65%, 3.36%);
    --foreground: hsl(198, 10%, 97.1%);
    --card: hsl(198, 45%, 5.46%);
    --card-foreground: hsl(198, 10%, 97.1%);
    --popover: hsl(198, 45%, 5.46%);
    --popover-foreground: hsl(198, 10%, 97.1%);
    --primary: hsl(198, 100%, 42%);
    --primary-foreground: hsl(198, 9.1%, 5.300000000000001%);
    --secondary: hsl(198, 50%, 12.6%);
    --secondary-foreground: hsl(198, 10%, 97.1%);
    --muted: hsl(198, 50%, 12.6%);
    --muted-foreground: hsl(198, 10%, 54.2%);
    --accent: hsl(198, 50%, 12.6%);
    --accent-foreground: hsl(198, 10%, 97.1%);
    --destructive: hsl(0, 84.2%, 60.2%);
    --destructive-foreground: hsl(0, 0%, 98%);
    --border: hsl(198, 50%, 12.6%);
    --input: hsl(198 50% 12.6%);
    --ring: hsl(198 100% 42%);
    --radius: 0.75rem;
  }

  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
  }

  html {
    font-family: "Jost Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
    overflow-x: hidden;
    overscroll-behavior: none;
  }

</style>