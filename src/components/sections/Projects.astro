---
import GitHub from "@/icons/GitHub.astro";
import Section from "../Section.astro";

import { projects } from "@cv/es.json";
---

<Section title="Proyectos">
  <ul class="mx-[-16px] grid gap-4">
    {
      projects.map(
        ({ url, description, highlights, name, isActive, github }) => {
          return (
            <li>
              <article class="flex h-full flex-col rounded-lg p-4">
                <header class="mb-1 flex items-center gap-1">
                  <h3 class="flex items-center gap-1">
                    <a
                      href={url}
                      target="_blank"
                      title={`Ver el proyecto ${name}`}
                    >
                      {name}
                    </a>
                    {isActive && (
                      <span class="animate-pulse text-green-500 print:animate-none">
                        •
                      </span>
                    )}
                  </h3>
                  {github && (
                    <a
                      class="github-code-link"
                      href={github}
                      target="_blank"
                      title={`Ver código fuente del proyecto ${name}`}
                    >
                      <GitHub />
                    </a>
                  )}
                </header>
                <p class="mb-4 text-xs">{description}</p>
                <footer class="flex flex-wrap gap-1 text-xs">
                  {highlights.map((highlight) => {
                    return (
                      <span class="rounded-md text-xs font-medium">
                        {highlight}
                      </span>
                    );
                  })}
                </footer>
              </article>
            </li>
          );
        },
      )
    }
  </ul>
</Section>

<style>
  ul {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }

  article {
    border: 1px solid #f2f2f2;
  }

  article a:hover {
    text-decoration: underline;
  }

  footer span {
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    padding: 0.2rem 0.6rem;
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }
</style>
