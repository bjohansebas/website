---
const { title, class: className } = Astro.props;
---

<section
  class:list={[
    "mx-auto mb-6 mt-0 w-full max-w-3xl max-[700px]:mb-9",
    className,
  ]}
>
  {
    title && (
      <div class="mb-2 flex items-center gap-4">
        <h2 class="text-2xl font-bold">{title}</h2>
        <span class="h-px flex-1 bg-primary" />
      </div>
    )
  }
  <slot />
</section>
